# OpenAI - Get key at https://platform.openai.com
OPENAI_API_KEY=

# Anthropic (Claude) - Get key at https://console.anthropic.com
ANTHROPIC_API_KEY=

# Google Gemini - Get key at https://aistudio.google.com
GOOGLE_API_KEY=

# xAI Grok - Get key at https://console.x.ai
GROK_API_KEY=

# Together AI - Get key at https://api.together.xyz
TOGETHER_API_KEY=

# OpenRouter - Get key at https://openrouter.ai
OPENROUTER_API_KEY=

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Default provider: groq, ollama, openai, anthropic, gemini, grok, together, openrouter
DEFAULT_LLM_PROVIDER=groq

# Default model (provider-specific)
DEFAULT_LLM_MODEL=llama-3.3-70b-versatile

# Fallback provider if default fails
FALLBACK_LLM_PROVIDER=ollama

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (optional, uses SQLite by default)
DATABASE_URL=sqlite:///db.sqlite3

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sentinel_password

# Redis (for Celery and Django Channels)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_SECRET_KEY=change-this-to-a-secure-random-string-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# CELERY SETTINGS
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# MARKET DATA APIS (Optional)
# =============================================================================
# Alpha Vantage - Get key at https://www.alphavantage.co
ALPHA_VANTAGE_API_KEY=

# Financial Modeling Prep - Get key at https://financialmodelingprep.com
FMP_API_KEY=
